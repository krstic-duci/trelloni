{
  "name": "trelloni",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "axios": "^0.21.1",
    "lodash": "^4.17.19",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.1",
    "react-spinners": "^0.9.0",
    "redux": "^4.0.5",
    "redux-logger": "^3.0.6",
    "redux-saga": "^1.1.3"
  },
  "scripts": {
    "build": "react-scripts build",
    "test": "react-scripts test --verbose=false",
    "coverage": "npm run test -- --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "client": "react-scripts start",
    "server": "json-server -w db.json -p 5000",
    "start": "npm-run-all -p -l client server",
    "linter": "npm-run-all -s lint:prettier lint:eslint",
    "lint:prettier": "npx prettier --write src/**/*.js src/css/*.css",
    "lint:eslint": "npx eslint src/**/*.js"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint-config-prettier": "^6.11.0",
    "faker": "^4.1.0",
    "husky": "^4.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:prettier & npm run lint:eslint"
    }
  }
}
